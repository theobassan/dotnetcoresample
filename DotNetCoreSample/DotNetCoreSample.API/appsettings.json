{
  "ConnectionStrings": {
    "DotNetCoreSample": "DotNetCoreSample"
  },
  "Serilog": {
    "MinimumLevel": {
        "Default": "Debug",
        "Override": {
            "Microsoft": "Warning",
            "System": "Warning"
        }
    },
    "WriteTo": [
      { 
        "Name": "Console" , 
        "Args": { 
          "outputTemplate": "{Timestamp:HH:mm:ss} [{Level}] ({SourceContext}) {Message}{NewLine}{Exception}"
        } 
      },
      { 
        "Name": "RollingFile", 
        "Args": { 
          "pathFormat": "Logs/log-{Date}.log",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:HH:mm:ss} [{Level}] ({SourceContext}) {Message}{NewLine}{Exception}"
        } 
      }
    ]
  }
}